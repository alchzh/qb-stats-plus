{
	"name": "QB Stats+",
	"version": "0.0.1",
	"description": "An extension that adds styling and additional functionality to Quizbowl stats pages (SQBS or YFT)",
	"homepage_url": "https://github.com/alchzh/qb-stats-plus",
	"manifest_version": 2,
	"minimum_chrome_version": "74",
	"applications": {
		"gecko": {
			"id": "qb-stats-plus@alchzh.me",
			"strict_min_version": "67.0"
		}
	},
	"icons": {
		"128": "logos/logo-128.png",
		"64": "logos/logo-64.png",
		"48": "logos/logo-48.png",
		"32": "logos/logo-32.png"
	},
	"browser_action": {
    "default_icon": {
			"128": "logos/logo-128.png",
			"64": "logos/logo-64.png",
			"48": "logos/logo-48.png",
			"32": "logos/logo-32.png"
		},
		"default_title": "QB Stats+"
  },
	"permissions": ["storage", "activeTab", "*://*.hsquizbowl.org/db/tournaments/*/stats*"],
	"background": {
		"persistent": false,
		"scripts": ["browser-polyfill.min.js", "background.js"]
	},
	"content_scripts": [
		{
			"matches": ["*://*.hsquizbowl.org/db/tournaments/*/stats*"],
			"run_at": "document_start",
			"js": ["browser-polyfill.min.js", "redirect.js"]
		},
		{
			"matches": ["*://*.hsquizbowl.org/db/tournaments/*/stats*"],
			"js": ["browser-polyfill.min.js", "content-script.js"]
		}
	]
}
